<div class="container">
  <div class="row justify-content-center min-vh-100 align-items-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card border-danger">
        <div class="card-body text-center p-5">
          <i class="bi bi-<%= error.status === 403 ? 'lock' : 'exclamation-triangle' %> text-danger" style="font-size: 4rem;"></i>
          <h2 class="mt-3"><%= title %></h2>
          <p class="lead text-muted"><%= message %></p>
          
          <% if (error.status) { %>
            <div class="alert alert-danger mt-3">
              <strong>Error Code:</strong> <%= error.status %>
            </div>
          <% } %>

          <% if (process.env.NODE_ENV === 'development' && error.stack) { %>
            <details class="mt-3">
              <summary class="btn btn-sm btn-outline-secondary">Show Error Details</summary>
              <pre class="text-start mt-3 p-3 bg-light"><%= error.stack %></pre>
            </details>
          <% } %>

          <div class="mt-4">
            <a href="/dashboard" class="btn btn-primary">
              <i class="bi bi-house"></i> Go to Dashboard
            </a>
            <a href="javascript:history.back()" class="btn btn-outline-secondary">
              <i class="bi bi-arrow-left"></i> Go Back
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
